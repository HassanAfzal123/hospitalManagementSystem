<!-- Donate MODAL -->
<div class="modal fade" id="donate" tabindex="-1" role="dialog" aria-labelledby="donate" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title custom_align" id="Heading">Donate Blood</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="fa fa-window-close" aria-hidden="true"></span></button>
            </div>
            <form method="post" action="/BloodDonor">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="donorName">Donor Name</label>
                        <input type="text" class="form-control" name="donorName" id="donorName" required>
                    </div>
                    <div class="form-group">
                        <label for="donorNumber">Donor Number</label>
                        <input type="text" class="form-control" name="donorNumber" id="donorNumber" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control hidden" name="requester_id" id="requester_id" required>
                    </div>
                </div>
                <div class="modal-footer ">
                    <button type="submit" class="btn btn-warning btn-lg" style="width: 100%"><span class="fa fa-check"></span> Donate Blood</button>
                </div>
            </form>

        </div>
